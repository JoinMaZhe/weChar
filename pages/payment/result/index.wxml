<!--pages/payment/result/index.wxml-->
<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">支付成功</view>
            <view class="weui-msg__desc">支付金额：¥{{payParam.totalFee}}</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap='goDiscovery'>返回首页</button>
                <button class="weui-btn" type="default" bindtap='goPolicy' >查看我的订单</button>
            </view>
        </view>
    </view>
</view>
