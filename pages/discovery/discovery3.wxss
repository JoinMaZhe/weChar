/* pages/discovery/discovery3.wxss */

.activity image{
  width: 750rpx;
  height: 300rpx;
}

.menu-wrp {
  width:100%;
  margin-top:16rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  background-color: #FFFFFF;
  height: 410rpx;
}
.menu-wrp:after{
    content:"";
    display:block;
    clear:both;
}
.menu-list{
    float:left;
    width:33.3%;
    box-sizing: border-box;
    padding-bottom:30px;
}

.menu-img{
    width:90rpx;
    height:90rpx;
    display:block;
    margin:0 auto;
    margin-bottom:16px;
}
.menu-desc{
    
    color:#3B3B3B;
    width:100%;
    height: 40rpx;
    text-align: center;
    display:block;
    font-size:28rpx;
    font-family: PingFangSC-Light;
}
.list{
  display: flex;
  flex-direction: row;
   flex-wrap:nowrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
  padding: 0 16rpx;
  margin-top:16rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  background-color: #E2E2E2;
  height: 300rpx;
}

.poi{
  background-color: #fff;
  position: relative;
  padding: 0 16rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  height: 300rpx;
  width: 49.7%;
  
}
.poix{
  background-color: #fff;
  position: relative;
  padding: 0 16rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  height: 300rpx;
  width: 100%;
  
}
.poi text{
   font-size:22rpx;
  color: #999999;
}
.poi image{
  width: 347rpx;
  height: 184rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}
.poi .info{
 height: 136rpx;
  left: 28rpx;

  z-index: 2;
}
.poi .title{
  font-size:28rpx;
  color: #222222;
  padding-right: 28rpx;
  text-shadow: 2rpx 4rpx rgba(0, 0, 0, .12);
}

.poix text{
   font-size:22rpx;
  color: #999999;
}
.poix image{
  width: 720rpx;
  height: 450rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}
.poix .info{
 height: 136rpx;
  left: 28rpx;

  z-index: 2;
}
.poix .title{
  font-size:28rpx;
  color: #222222;
  padding-right: 28rpx;
  text-shadow: 2rpx 4rpx rgba(0, 0, 0, .12);
}