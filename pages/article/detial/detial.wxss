/* pages/article/detial.wxss */
.page {
    min-height: 100%;
    flex: 1;
    background-color: #ffffff;
    overflow: hidden;
}
.page__hd{
    padding: 50rpx 50rpx 50rpx 50rpx;
    text-align: center;
}
.page__title{
    display: inline-block;
    padding: 20rpx 40rpx;
    color: #AAAAAA;
    border-bottom: 1px solid #CCCCCC;
}
.page__title {
    text-align: left;
    font-size: 40rpx;
    font-family: PingFangSC-Medium;
    color: #222222;
}
.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.page__desc{
    display: none;
    margin-top: 20rpx;
    font-size: 26rpx;
    color: #BBBBBB;
}
.article-content {
    padding: 0 40rpx 100rpx 40rpx;
    margin-top: 5rpx;
}
.article-content text{
    font-size: 30rpx;
    color: #666666;
    line-height: 42rpx;
    margin: 20rpx 0;
}
.article-content image{
    width: 100%;
    height: 300rpx;
    margin: 20rpx 0;
}
