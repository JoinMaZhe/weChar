.weui-vcode-btn {
  padding: 0 0.1em 0 0.3em;
}

.top {
  background-color: #fff;
  position: relative;
  left: 0;
  top: 0;
}

.photoBg {
  width: 750rpx;
  height: 210rpx;
}

.photoBg image {
  width: 750rpx;
  height: 210rpx;
  background-color: #fff;
}

.user {
  padding: 0rpx 38%;
}

.user .userinfo-avatar {
  flex: 1;
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.user .user-info {
  flex: 5;
  text-align: left;
}

.user .user-info text {
  display: block;
}

.weui-cell__hd {
  font-size: 30rpx;
  color: #999;
}
