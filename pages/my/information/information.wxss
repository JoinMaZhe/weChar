/* pages/my/information.wxss */
@import "../../../style/weui.wxss";

page {
  height: 100%;
}

.my_signinfo {
  margin-top: 2rem;
  margin: 0rpx 20rpx 20rpx;
  background-color: #fff;
  border-color: #d9d9d9;
  border-style: solid;
  border: none;
  border-bottom-width: 0px;
  border-right-width: 0px;
  border-left-width: 0px;
  border-radius: 9px;
  left: 0.5rem;
  right: 0.5rem;
  top: 0.8rem;
}

.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
  font-size: 16px;
  color: #888;
}

