/* pages/my/my.wxss */
@import "../../style/weui.wxss";
.row{
  padding:5rpx 15px;
}
.user {
  width: 750rpx;
  height: 260rpx;
  background: #ffffff;
  padding: 20rpx 39% ;
}
.top{

 background-color: #ffffff;
 position:relative;
 left:0;
 top:0;
}

.photoBg{
   width: 750rpx;
   height: 210rpx;

}
.photoBg image{
   width: 750rpx;
   height: 210rpx;
   background-color: #ffffff;
}
.user .userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}
.user .user-info{
  flex: 5;
  text-align: left;
}
.user .user-info text{
  display: block;
}
.weui-cell 
{
  padding:25rpx 15px;

}
.weui-cell__hd image{
  margin-right: 20rpx;
  vertical-align: middle;
  width:50rpx; 
  height: 50rpx;
}
.page__bd{
  margin: 15rpx 0 0 0;
  position:relative;
  left:0;
  top:350rpx;
  background-color: #fff;
}
 .view1{
   margin-bottom: 22rpx;
 }
 .mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
    width: 580rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.wx_foot{
 right:30rpx;
bottom:30rpx;
position:fixed;
z-index:1500;

}
.wx-button {
padding:0;
margin:0;
border-radius:0;
color:inherit!important;
background:0 0!important;
font-size:inherit;
line-height:inherit;
text-align:inherit;
width:80rpx;
height:80rpx;
color:#fff;
border-radius:50%;
z-index:1;
overflow:visible;
background-color:#11c1f3!important;
transition-duration:.3s;
display:-ms-flexbox;
display:flex;
-ms-flex-align:center;
align-items:center;
-ms-flex-pack:center;
justify-content:center;
box-shadow:0 0 8rpx rgba(0,0,0,.14),0 8rpx 16rpx rgba(0,0,0,.28);

top:0;
left:0;
opacity:1;
z-index:2;
width:100rpx;
height:100rpx;
-webkit-tap-highlight-color:transparent;
overflow:hidden;


}
.wx_img {
display:inline-block;
width:70rpx;
height:70rpx;
font-size:40rpx;
line-height:1;
transition:transform 150ms cubic-bezier(.4,0,1,1);

}

.foot_txt{
right:120rpx;
opacity:1;
position:absolute;
top:50%;
padding:8rpx 20rpx;
font-size:24rpx;
background:rgba(0,0,0,.4);
border-radius:6rpx;
color:rgba(255,255,255,.8);
pointer-events:none;
white-space:nowrap;
box-sizing:border-box;
transform:translate3d(0,-50%,0);
transition:all .3s;
}





