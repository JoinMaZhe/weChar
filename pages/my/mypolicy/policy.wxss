/* pages/my/mypolicy/policy.wxss */
@import "../../../style/weui.wxss";

.container {
  background: #f8f8f8;
  /* display:block; */
  min-height: 100%;
  height: auto;
}

.page {
  min-height: 100%;
  background: #f8f8f8;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #fff;
}

.weui-form-preview__value image {
  display: inline-block;
  overflow: hidden;
  width: 71px !important;
  background-color:rgb(255, 255, 255);

}

.weui-form-preview__label {
  font-size: 14px;
  float: left;
  margin-right: 1em;
  min-width: 4em;
  color: #808080;
  text-align: justify;
  text-align-last: justify;
  /* padding:2px; */
}

.weui-form-preview__value {
  font-size: 13px;
}

.weui-form-preview__hd {
  position: relative;
  padding: 10px 15px;
  text-align: right;
  line-height: 2.5em;
  border: none;
}

.weui-form-preview__hd::after {
  border: none;
}

weui-form-preview__item {
  overflow: hidden;
  margin: 0px;
}

.weui-form-preview {
  margin-top: 5px;
  margin-bottom: 5px;
  width: 100%;
}

.weui-form-preview::after {
  border: none;
}

page {
  height: 100%;
}
.page__bd{
background: #fff;
}
.weui-form-preview__label .good_num{
font-family: PingFangSC-Medium;
  font-size: 26.4rpx;
  color: #ff6b02;
  width: 169rpx;
  padding-top: 23rpx;
  line-height: 55rpx;
}


.btn_default image {
  padding-left: 430rpx;
  width: 50rpx;
  height: 50rpx;
}

.enn-button {
  width: 125rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  text-align: center;
  cursor: pointer;
  white-space: nowrap;
  display: inline-block;
  color: #04ACD4;
  position: relative;
  border: 1px solid #04ACD4;
  margin-right: 0rpx;
}

.weui-btn_primary {
  background-color: #169BD5;
  color: #ffff;
}


.btn_payment {

  margin-top: 30px;
  margin-left: 0.5rem;


}

.weui-btn_mini {
  display: inline-block;
  padding: 0 1.32em;
  line-height: 2.3;
  font-size: 15px;
  width:124px;

}

.btn_renewal{

