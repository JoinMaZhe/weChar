}

.bd {
  width: 100%;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  display: flex;
}

.choose {
  margin: 90rpx 98rpx;
  position:relative;
display:block;

}

.choose image {
  width: 160rpx;
  height: 160rpx;
}

text {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #fff;
}

icon {
  height: 40rpx;
  width: 40rpx;
  margin: 10rpx 18rpx;
  border: 2rpx solid #04acd4;
  border-radius: 20px;
}

.page__ft {
  margin: 1.35rem 0 0.3rem;
  align-content: center;
}

.button-sp-area {
  display: flex;
  margin: 0.35rem 0.3rem 0.3rem;
}

.button-sp-area  view {
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #fff;
  margin-top: 9rpx;
}
.wave2{
  transform: translate3d(0,0,0);
  animation: rise 1s cubic-bezier(0.19, 1, 0.22, 1) .25s forwards;
}

@keyframes rise{
  0% {opacity: 0;transform: translate3d(0,0,0);}
  50% {opacity: 1;}
  100% {opacity: 1;transform: translate3d(0,10rpx,0);}
}
.wraper {
    position: relative;
    z-index: 1;
    min-height: 100%;
    background-color: #191e27;
    background-image: url(../img/index_bg1.png),url(../img/index_bg2.png);
    background-repeat: no-repeat,no-repeat;
    background-position: right top,left bottom;
    background-size: contain;
    background-attachment: fixed;
}
