.page {
  height: 100%;
  background-image: linear-gradient(-12deg, #00e1d0 3%, #26abe2 82%, #26abe2 100%);
}

.hd {
  top: 0;
  left: 50%;
  height: 247rpx;
  width: 100%;
}

.logo {
  position: absolute;
  z-index: 2;
  left: 19%;
  top: 3%;
  width: 113rpx;
  height: 113rpx;
  margin-left: -80rpx;
  border-radius: 160rpx;
  animation: sway 10s ease-in-out infinite;
  opacity: 0.95;
}

.question {
  position: absolute;
  z-index: 2;
  left: 39%;
  top: 5%;
  height: 113rpx;
  margin-left: -80rpx;
  border-radius: 160rpx;
  animation: sway 10s ease-in-out infinite;
  opacity: 0.95;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fff;
}
.questionDeital{
  height: 113rpx;
  width: 288rpx;
  margin-left: 210rpx;
  padding-top: 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  color: #fff;
  align-content: center;
}

.wave {
  z-index: 3;
  right: 0;
  bottom: 0;
  opacity: 0.725;
